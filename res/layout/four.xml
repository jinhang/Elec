<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/elec_title" >

        <Button
            android:id="@+id/btn_home_left"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/btn_back_presschange"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_rihgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/btn_right_presschange"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="市场成员中心"
            android:textColor="@color/white"
            android:textSize="20dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/worklayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@id/username_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/sapi_input_top"
                    android:gravity="left|center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dip"
                        android:text="@string/username_tip"
                        android:textColor="@color/sapi_tip_text_color"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/username"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="请输入你的用户名"
                        android:inputType="textPersonName"
                        android:textColor="@color/sapi_edit_text_color"
                        android:textColorHint="@color/sapi_edit_hint_color"
                        android:textSize="14.0sp" >

                        <requestFocus />
                    </EditText>

                    <Button
                        android:id="@id/clear_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.0dip"
                        android:background="@drawable/sapi_clear_btn_selector"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/password_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/sapi_input_under"
                    android:gravity="left|center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dip"
                        android:text="@string/user_pwd"
                        android:textColor="@color/sapi_tip_text_color"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/password"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLength="14"
                        android:maxLines="1"
                        android:textColor="@color/sapi_edit_text_color"
                        android:textColorHint="@color/sapi_edit_hint_color"
                        android:textSize="14.0sp" />

                    <Button
                        android:id="@id/clear_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.0dip"
                        android:background="@drawable/sapi_clear_btn_selector"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@id/phone_login"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/btn_login_presschange"
                    android:clickable="true" >

                    <Button
                        android:id="@id/phone_login_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/btn_login_presschange" 
                        android:text="登  陆"
                        android:textColor="@color/white"
                        android:textSize="16.0sp"
                        />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_centerVertical="true"
            android:text="TextView" />
    </RelativeLayout>

</LinearLayout>